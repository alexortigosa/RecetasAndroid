<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.alexandreortigosa.appfi.recetas.addReceta1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.16">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addRecetaPhoto"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:id="@+id/addReceta_Name"
                android:layout_weight="1"
                android:textSize="20dp"
                android:hint="@string/addReceta_name"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">
        <EditText
            android:inputType="textMultiLine"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="20"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/addReceta_Desc"
            android:layout_weight="0.15"
            android:textSize="15dp"
            android:hint="@string/addReceta_Desc"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addReceta_checkedButton"
                android:layout_weight="1"
                android:background="@drawable/checkedonly" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/addReceta_cancelButton"
                android:layout_weight="1"
                android:background="@drawable/canceltynired" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.22">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_Receta_Ingredientes"
            android:background="@drawable/button"
            style="@style/button_text"
            android:id="@+id/addReceta_ButtonIng" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.22">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_Receta_add"
            android:background="@drawable/button"
            style="@style/button_text"
            android:id="@+id/addReceta_ButtonAdd" />
    </LinearLayout>

    </LinearLayout>
